<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qinqin.simpledemo.module.recyclerview.RecylerViewActivity">

    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/home_recyler"
        style="@style/CommonButton"
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/multple_recycler"
        style="@style/CommonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MultipleItem" />

    <Button
        android:id="@+id/pullToRefresh_recycler"
        style="@style/CommonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PullToRefresh" />

    <Button
        android:id="@+id/section_recycler"
        style="@style/CommonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Section" />
</LinearLayout>
